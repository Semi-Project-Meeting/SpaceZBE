<mapper namespace="com.spaceZ.reply">
	<insert id="SQL_INSERT_REPLY" parameterType="com.spaceZ.reply.ReplyVO">
		insert into reply(replyid, spaceid, memberid, content, replydate) values(seq_reply.nextval, #{spaceId}, #{memberId},#{content}, TO_CHAR(SYSDATE, 'YYYY-MM-DD'))
	</insert>
	
	<update id="SQL_UPDATE_REPLY" parameterType="com.spaceZ.reply.ReplyVO">
		update reply set content = #{content} where replyid = #{replyId}
	</update>
	
	<delete id="SQL_DELETE_REPLY" parameterType="com.spaceZ.reply.ReplyVO">
		delete from reply where replyid = #{replyId}
	</delete>
  
