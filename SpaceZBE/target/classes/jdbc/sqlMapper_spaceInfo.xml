<mapper namespace="com.spaceZ.serviceInfo">
  <select id="SQL_SELECT_ONE" resultType="com.spaceZ.serviceInfo.SpaceInfoVO">
    select * from space where spaceid=#{spaceId}
  </select>
  
  <select id="SQL_GET_RATING" resultType="double">
  	select round(avg(rating), 1) from review where spaceid = #{spaceId}
  </select>
  
  <select id="SQL_GET_REPLYS" resultType="com.spaceZ.serviceInfo.ReplyVO">
  	select * from reply where spaceid = #{spaceId} order by replydate desc
  </select>
  
  <select id="SQL_GET_REVIEWS" resultType="com.spaceZ.serviceInfo.ReviewVO">
  	select * from review where spaceid = #{spaceId} order by reviewdate desc
  </select>
  
  <select id="SQL_GET_QNAS" resultType="com.spaceZ.serviceInfo.QnaVO">
  	select * from qna where spaceid = #{spaceId} order by qnadate desc
  </select>
  
